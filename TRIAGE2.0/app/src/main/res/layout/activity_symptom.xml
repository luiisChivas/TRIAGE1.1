<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hospital.symptom.SymptomActivity">

        <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTittleSymptom"
                android:textSize="25dp"
                android:textAlignment="center"
                android:paddingTop="40dp"
                android:paddingBottom="20dp"
                android:typeface="serif"/>


        <GridLayout
        android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp">

        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/diseas"/>

        <Spinner android:layout_width="250dp"
            android:layout_column="2"
            android:layout_row="0"
            android:id="@+id/spnIdDisease"/>

    </GridLayout>


        <GridLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/level_number"/>

        <Spinner
            android:layout_width="250dp"
            android:layout_column="2"
            android:layout_row="0"
            android:id="@+id/spnIdLevel"/>

    </GridLayout>

        <TextView
            android:layout_height="29dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="@string/sympto"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/edtIdSymptom"
            android:layout_gravity="center"/>
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/edtSymptom"
            android:hint="@string/enter_text"
            android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/btn_save"
                    android:textColorHint="@color/white"
                    android:id="@+id/btnSaveSymptom"
                    android:background="@drawable/rounded_button_save"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/btn_update"
                    android:textColorHint="@color/white"
                    android:id="@+id/btnUpdateSymptom"
                    android:background="@drawable/rounded_button_update"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/btn_delete"
                    android:id="@+id/btnDeleteSymptom"
                    android:textColorHint="@color/white"
                    android:background="@drawable/rounded_button_delete"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>
            </LinearLayout>


    </LinearLayout>

</LinearLayout>