<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_light"
    tools:context="com.hospital.level.FragmentRed">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            android:paddingTop="20dp"
            android:gravity="top|center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/red"
                    android:textColorHint="@color/delete"
                    android:paddingTop="20dp"
                    android:textSize="35dp"
                    android:textColor="@color/delete"
                    android:textAlignment="center"
                    android:typeface="serif"/>
            </FrameLayout>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center"
            android:gravity="top|center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_gravity="top|center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/str_red_righ_now"
                    android:textColorHint="@color/black"
                    android:paddingTop="20dp"
                    android:textSize="25dp"
                    android:textColor="@color/delete"
                    android:textAlignment="center"
                    android:typeface="serif"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/str_red_a"
                    android:textColorHint="@color/black"
                    android:paddingTop="15dp"
                    android:layout_marginTop="100dp"
                    android:textSize="25dp"
                    android:textColor="@color/delete"
                    android:textAlignment="center"
                    android:typeface="serif"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/str_red_b"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="180dp"
                    android:paddingTop="50dp"
                    android:textSize="25dp"
                    android:textColor="@color/delete"
                    android:textAlignment="center"
                    android:typeface="serif"/>
            </FrameLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:gravity="left"
        android:orientation="vertical">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_row="0"
            android:paddingBottom="10dp"
            android:background="@drawable/ic_back"
            android:id="@+id/btnBackRed"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

</FrameLayout>