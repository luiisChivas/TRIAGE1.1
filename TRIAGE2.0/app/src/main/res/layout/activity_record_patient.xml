<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.hospital.patient.ActivityRecordPatient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/observations"
                android:textSize="25dp"
                android:textAlignment="center"
                android:paddingTop="40dp"
                android:paddingBottom="20dp"
                android:typeface="serif"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:background="@drawable/rounded_editext_form"
                android:inputType="text"
                android:id="@+id/edtPatientId"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_editext_form"
                android:inputType="text"
                android:textAlignment="center"
                android:id="@+id/edtPatientName"
                android:enabled="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:textAlignment="center"
                android:textSize="16dp"
                android:typeface="serif"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_editext_form"
                android:inputType="text"
                android:id="@+id/edtLastNamePatient"
                android:enabled="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/last_name"
                android:textAlignment="center"
                android:textSize="16dp"
                android:typeface="serif"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_editext_form"
                android:inputType="text"
                android:id="@+id/edtSecondLastNamePatient"
                android:enabled="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/last_name_m"
                android:textAlignment="center"
                android:textSize="16dp"
                android:typeface="serif"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_editext_form"
                android:inputType="text"
                android:id="@+id/edtDiseasePatient"
                android:enabled="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/diseas"
                android:textAlignment="center"
                android:textSize="16dp"
                android:typeface="serif"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:background="@drawable/rounded_editext_form"
                android:inputType="text"
                android:id="@+id/edtSymptomPatient"
                android:enabled="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sympto"
                android:textAlignment="center"
                android:textSize="16dp"
                android:typeface="serif"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_editext_form"
                android:inputType="text"
                android:id="@+id/edtFCPatient"
                android:enabled="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fc"
                android:textAlignment="center"
                android:textSize="16dp"
                android:typeface="serif"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAlignment="center"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_editext_form"
                android:inputType="text"
                android:id="@+id/edtFRPatient"
                android:enabled="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fr"
                android:textAlignment="center"
                android:textSize="16dp"
                android:typeface="serif"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_editext_form"
                android:inputType="text"
                android:id="@+id/edtOcularPatient"
                android:enabled="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ocular_opening"
                android:textAlignment="center"
                android:textSize="16dp"
                android:typeface="serif"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_editext_form"
                android:inputType="text"
                android:id="@+id/edtMotoraPatient"
                android:enabled="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/motor_response"
                android:textAlignment="center"
                android:textSize="16dp"
                android:typeface="serif"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:background="@drawable/rounded_editext_form"
                android:inputType="text"
                android:id="@+id/edtVerbalPatient"
                android:enabled="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/verbal_response"
                android:textAlignment="center"
                android:textSize="16dp"
                android:typeface="serif"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_editext_form"
                android:inputType="text"
                android:id="@+id/edtTotalPatient"
                android:enabled="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/total"
                android:textAlignment="center"
                android:textSize="16dp"
                android:typeface="serif"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:background="@drawable/rounded_editext_form"
                android:inputType="text"
                android:id="@+id/edtSistolicaPatient"
                android:enabled="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ta_systolic"
                android:textAlignment="center"
                android:textSize="16dp"
                android:typeface="serif"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_editext_form"
                android:inputType="text"
                android:id="@+id/edtDiastolicaPatient"
                android:enabled="false"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ta_diastolic"
                android:textAlignment="center"
                android:textSize="16dp"
                android:typeface="serif"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:hint="@string/observations"
                android:textAlignment="center"
                android:textSize="16dp"
                android:typeface="serif"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_editext_form"
                android:inputType="text"
                android:id="@+id/edtObservationsPatient"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp">
                <Button
                    android:id="@+id/btnUpdatePatient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/btn_update"
                    android:textColorHint="@color/white"
                    android:background="@drawable/rounded_button_update"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>